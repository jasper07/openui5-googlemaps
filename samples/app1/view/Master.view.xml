<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View
    controllerName="testapp1.view.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="{i18n>FirstPageTitle}">
        <List
            id="idListBeers"
            items="{/beers}"
            mode="SingleSelectMaster"
            select="handleListSelect">
            <StandardListItem
                title="{brewName}"
                description="{brewerName}" />
        </List>
    </Page>

</mvc:View>
