<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="testapp.view.Detail" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:gmaps="openui5.googlemaps">
    <Page title="{brewName}" enableScrolling="false">
        <content>
            <gmaps:Map height="400px" zoom="12" lat="{lat}" lng="{lng}" apiKey="AIzaSyDY0kkJiTPVd2U7aTOAwhc9ySH6oHxOIYM">
                <gmaps:markers>
                    <gmaps:Marker lat="{lat}" lng="{lng}" info="{parts:[{path:'brewName'},{path:'brewerName'},{path:'brewType'}], formatter:'.formatter.info'}" icon="http://maps.google.com/mapfiles/kml/pal2/icon21.png"></gmaps:Marker>
                </gmaps:markers>
            </gmaps:Map>
        </content>
    </Page>
</mvc:View>